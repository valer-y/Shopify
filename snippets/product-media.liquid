{% case media.media_type %}
    {% when 'image' %}
        <img src="{{ media | img_url: 'large' }}" alt="{{ media.preview_image.alt }}" class="w-full object-cover">
    {% when 'external_video' %}
        {{ media | external_video_tag: class: "w-full h-80 object-cover" }}       
    {% when 'video' %}
        {{ media | video_tag: controls: true, class: "w-full h-full object-cover" }}   
    {% when 'model' %}
        {{ model | model_viewer_tag }}               
    {% else %}        
{% endcase %}